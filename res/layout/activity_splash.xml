<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B8CB8"
    >
    
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:text="Soap Sync"
        android:padding="10dp"
        android:id="@+id/splash_main_name"
        android:textStyle="bold"/>
    
    <ProgressBar android:layout_gravity="center|top"
        android:indeterminate="true"
        android:layout_width="fill_parent"
        android:id="@+id/splash_load_progress"
        android:layout_below="@id/splash_main_name"
        android:padding="10dp"
        android:layout_height="wrap_content"
         />
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/splash_load_progress"
        android:id="@+id/splash_load_status"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:textSize="14sp"
        />
    
</RelativeLayout>

